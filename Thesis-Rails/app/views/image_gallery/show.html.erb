<%= render 'shared/header' %>

<%= render 'shared/mission_navigation' %>
<%= render 'shared/editor_control' %>

<script>
  var project_id = <%= @project.id %>;
</script>


<%= javascript_include_tag 'jquery/jquery.ui'  %>
<%= javascript_include_tag 'commands/command'  %>
<%= javascript_include_tag 'commands/image_gallery'  %>
<%= javascript_include_tag 'views/image_gallery'  %>

<%= stylesheet_link_tag 'jquery.ui'  %>
<%= stylesheet_link_tag 'views/image_gallery' %>


<div class="content">
<h3>Image Gallery</h3>


<div id="imageFileTree" class="title-as-tooltip" title="Click on a file to view it. Use the contextmenu to rename or remove files. Files can be moved with drag and drop.">
</div>
<div id="imagePreviewContainer">
  <img src="/images/empty.gif" id="imagePreview" />
</div>



<div id="imageActions">
    <h3><a href="#">Upload new File</a></h3>
    <div>
      <form id="fileUploadForm" method="post"
                          action="/projects/<%= @project.id %>/image_gallery/uploadFile"
                          enctype="multipart/form-data">
         <input id="fileUpload" name="uploadedFile"  type="file" /> <br />
         <input type="hidden" id="targetFolder" name="target_folder" value="<%= @target_folder %>" />
         <p id="imageUploadFolder">Folder: <%= @target_folder %></p>
          Select a folder in the tree above. <br />
         <input id="fileUploadSubmit" type="submit" value="Upload" />
         <input type="hidden" name="authenticity_token" id="authenticity_token" value="<%= form_authenticity_token %>" />

      </form> <br />

    </div>
    <h3><a href="#">Copy file from other project</a></h3>
    <div>
      <div id="allProjectsImageFileTree" class="title-as-tooltip" title="Use drag and drop to copy images from another project into the current project.">
      </div>
    </div>
</div>


</div>